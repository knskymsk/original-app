<head>
    <meta charset="UTF-8">
    <title>Animated SIGNUP Form</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="box" >
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%# <%= render "devise/shared/error_recipes", resource: resource %> 
        <h1>SIGN UP</h1>
        <%= f.text_field :nickname, autofocus: true, placeholder: "Nickname", autocomplete: "new-Email" %>
        <%= f.email_field :email, placeholder: "Email", autocomplete: "off" %>
        <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password" %>
        <%# <%= f.password_field :password_confirmation, autocomplete: "off"%> 
        <%= f.submit "Signup" %>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
</body>